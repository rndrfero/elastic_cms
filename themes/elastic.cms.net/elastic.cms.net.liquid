

<div id="OuterWrapper">

	<div class="isle" style="">
				
		<div style="position: absolute;">
			<a href="/"><img src="/x/current_theme/images/logo.png" alt="Logo"/></a>
		</div>
		
		<div style="position: absolute; right: 0px; padding: 10px; ">
			{% give_me node section_slogans.nodes.starry.random %}						
			{% if the_node.content[0] == nil %}
				<h3>{{ the_node }}</h3>
			{% else %}
				<h3><a href="{{ the_node.content[0].path }}">{{ the_node }}</a></h3>
			{% endif %}
		</div>
		
		{% if action == 'index' %}		
				
			<br/>
			{% include 'mindmaps/menu' %}
			
			<br/><br/>

			<div class="markdown">
				<!-- { % give_me html 'https://github.com/airblade/paper_trail/' % } 		
				{ { the_html | xpath: '/html/body/div/div[2]/div/div[3]/div[2]/div/div[2]/article' } } -->
			</div>
			
			
		{% else %}
			
			<br/><br/><br/><br/><br/>
			<br/><br/><br/><br/><br/>
			
			<div id="InnerWrapper">			
				<h1>{{ node.title }}</h1>
				
				<div class="contentWrapper">
					<!-- {% md %}{{ node.content[0] }}{% endmd %} -->
					{{ node.content[0] | md }}
				</div>
			</div>
			
		{% endif %}
		
	</div>
	
	
	<div id="Footer" class="isle">
		{% give_me node 'Footer' %}
		{{ the_node.content[0] }}		
		<!-- { % give_me html 'http://tenderlovemaking.com/' %} 		
		{ { the_html | xpath: '/html/body/article/section/div/p' }} -->
		<hr/>
		{% give_me file 'git.txt' %}
		{{ the_file }}
		
	</div>
	
</div>