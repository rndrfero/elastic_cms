		<%= form_for @item, :url=>import_editor_site_path(@item) do |f| %>
	
		  Import .zip: <%= f.file_field 'file' %>
			&nbsp;&nbsp;
		  <%= link_to 'EXPORT .ZIP', :url=>export_editor_site_path(@item), :method=>:post, :class=>'button' %>

		<% end %>
		 -->
</div>



